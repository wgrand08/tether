#!/usr/bin/make -f
# -*- makefile -*-

configure: configure-stamp
configure-stamp:
	dh_testdir

	touch configure-stamp


build: build-stamp

build-stamp: configure-stamp  
	dh_testdir
	touch build­stamp


clean: 
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean ­k
	dh_installdirs

	cp -r data/ $(CURDIR)/debian/moonpy/usr/local/games/moonpy
	cp -r client/ $(CURDIR)/debian/moonpy/usr/local/games/moonpy
	cp -r common/ $(CURDIR)/debian/moonpy/usr/local/games/moonpy
	cp -r server/ $(CURDIR)/debian/moonpy/usr/local/games/moonpy
	cp AUTHORS.txt $(CURDIR)/debian/moonpy/usr/local/games/moonpy
	cp COPYING.txt $(CURDIR)/debian/moonpy/usr/local/games/moonpy
	cp README.txt $(CURDIR)/debian/moonpy/usr/local/games/moonpy
	cp moon.py $(CURDIR)/debian/moonpy/usr/local/games/moonpy
	cp run_moonpy.sh $(CURDIR)/debian/moonpy/usr/local/games/moonpy
	cp moonpy.desktop $(CURDIR)/debian/moonpy/usr/share/applications




# Build architecture-independent files here.
binary-indep: install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: install
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_installexamples
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
